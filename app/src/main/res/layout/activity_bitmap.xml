<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_compress_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="压缩图片"/>

        <Button
            android:id="@+id/btn_save_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存图片"
            app:layout_constraintLeft_toRightOf="@id/btn_compress_image"/>

        <Button
            android:id="@+id/btn_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取文件夹"
            app:layout_constraintLeft_toRightOf="@id/btn_save_image"/>

        <Button
            android:id="@+id/btn_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载图片"
            app:layout_constraintLeft_toRightOf="@id/btn_file"/>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="500px"
            android:layout_height="200px"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/btn_compress_image"/>

        <ImageView
            android:id="@+id/iv_glide_image"
            android:layout_width="500px"
            android:layout_height="500px"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/iv_image"/>

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/iv_glide_image"
            app:layout_constraintTop_toTopOf="@id/iv_glide_image">

            <com.cnksi.android.glide.GlideImageView
                android:id="@+id/iv_glide_progress_image"
                android:layout_width="400px"
                android:layout_height="400px"
                android:background="@color/colorPrimary"/>

            <com.cnksi.android.glide.progress.CircleProgressView
                android:id="@+id/progressView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:progress="0"
                android:visibility="gone"
                app:cpv_innerPadding="2dp"
                app:cpv_outerColor="@color/transparent90_white"
                app:cpv_outerSize="1dp"
                app:cpv_progressNormalColor="@color/transparent"
                app:cpv_progressReachColor="@color/transparent90_white"
                app:cpv_progressStyle="FillInnerArc"/>
        </FrameLayout>

        <com.cnksi.android.glide.widget.NineImageView
            android:id="@+id/nineview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_glide_image"/>

        <com.cnksi.android.view.DraggableFrameLayout
            android:id="@+id/draggableViewF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/draggableView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom|start"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_multi_imageview"/>
        </com.cnksi.android.view.DraggableFrameLayout>


    </android.support.constraint.ConstraintLayout>
</layout>