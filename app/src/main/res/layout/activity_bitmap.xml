<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_compress_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="压缩图片"/>

        <Button
            android:id="@+id/btn_save_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存图片"
            app:layout_constraintLeft_toRightOf="@id/btn_compress_image"/>

        <Button
            android:id="@+id/btn_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取文件夹"
            app:layout_constraintLeft_toRightOf="@id/btn_save_image"/>

        <Button
            android:id="@+id/btn_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载图片"
            app:layout_constraintLeft_toRightOf="@id/btn_file"/>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="500px"
            android:layout_height="200px"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/btn_compress_image"/>

        <ImageView
            android:id="@+id/iv_glide_image"
            android:layout_width="500px"
            android:layout_height="500px"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/iv_image"/>

    </android.support.constraint.ConstraintLayout>
</layout>