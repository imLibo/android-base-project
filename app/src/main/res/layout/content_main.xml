<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.cnksi.sample.MainActivity"
        tools:showIn="@layout/activity_main">

        <com.cnksi.android.view.UnderLineLinearLayout
            android:id="@+id/line_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="15dp"
            app:ull_lineColor="@color/bg_red_ff7575"
            app:ull_lineHeight="3px"
            app:ull_marginLeft="@dimen/dp_10"
            app:ull_marginRight="@dimen/dp_10">

            <com.cnksi.android.view.AutoBackgroundButton
                android:id="@+id/sample_text"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@color/colorPrimaryDark"
                android:clickable="true"
                android:text="Hello World!"
                app:abb_normalColor="@color/colorAccent"
                app:abb_radius="5dp"/>
        </com.cnksi.android.view.UnderLineLinearLayout>

        <com.cnksi.android.view.LabelValueLayout
            android:id="@+id/labelValueContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gray_e1e4e4"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/line_layout"
            app:lvl_labelTextColor="@color/bg_red_ff7575"
            app:lvl_labelTextSize="40px"
            app:lvl_lineColor="@color/bg_red_ff7575"
            app:lvl_lineHeight="3px"
            app:lvl_lineMarginBottom="@dimen/dp_10"
            app:lvl_lineMarginLeft="@dimen/dp_10"
            app:lvl_lineMarginRight="@dimen/dp_10"
            app:lvl_lineMarginTop="@dimen/dp_10"
            app:lvl_lineWidth="3px"
            app:lvl_rightBackgroundColor="@color/bg_blue_59e9f2"
            app:lvl_rightDrawable="@mipmap/ic_arrow_down"
            app:lvl_spacing="30px"
            app:lvl_valueTextColor="@color/bg_green_01ce7f"
            app:lvl_valueTextEnabledEdit="true"
            app:lvl_valueTextSize="50px"/>

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/labelValueContainer"/>

        <com.cnksi.android.view.CenterDrawableTextView
            android:id="@+id/cdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@mipmap/ic_arrow_down"
            android:padding="@dimen/dp_4"
            app:abb_normalColor="@android:color/transparent"
            app:abb_radius="5dp"
            app:abb_textPressColor="@color/bg_green_01ce7f"
            app:layout_constraintTop_toBottomOf="@id/container"/>

    </android.support.constraint.ConstraintLayout>
</layout>