<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AutoBackgroundButton">
        <attr name="abb_pressColor" format="color"/>
        <attr name="abb_normalColor" format="color"/>
        <attr name="abb_disableColor" format="color"/>
        <attr name="abb_radius" format="dimension"/>
        <attr name="abb_shape">
            <enum name="rectangle" value="0"/>
            <enum name="oval" value="1"/>
            <enum name="line" value="2"/>
            <enum name="ring" value="3"/>
        </attr>
        <attr name="abb_textPressColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="UnderLineLinearLayout">
        <attr name="ull_marginLeft" format="dimension"/>
        <attr name="ull_marginRight" format="dimension"/>
        <attr name="ull_lineColor" format="color"/>
        <attr name="ull_lineHeight" format="dimension"/>
        <attr name="ull_pressColor" format="color"/>
        <attr name="ull_normalColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="LabelValueLayout">
        <attr name="lvl_spacing" format="dimension"/>
        <attr name="lvl_labelTextSize" format="dimension"/>
        <attr name="lvl_valueTextSize" format="dimension"/>
        <attr name="lvl_labelTextColor" format="color"/>
        <attr name="lvl_valueTextColor" format="color"/>
        <attr name="lvl_lineHeight" format="dimension"/>
        <attr name="lvl_lineWidth" format="dimension"/>
        <attr name="lvl_lineMarginLeft" format="dimension"/>
        <attr name="lvl_lineMarginRight" format="dimension"/>
        <attr name="lvl_lineMarginTop" format="dimension"/>
        <attr name="lvl_lineMarginBottom" format="dimension"/>
        <attr name="lvl_lineColor" format="color"/>
        <attr name="lvl_valueTextEnabledEdit" format="boolean"/>
        <attr name="lvl_rightDrawable" format="reference"/>
        <attr name="lvl_rightText" format="string"/>
        <attr name="lvl_rightBackgroundColor" format="color"/>
        <attr name="lvl_rightDrawableWidth" format="dimension"/>
        <attr name="lvl_rightDrawableHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LeftDrawbleTextLayout">
        <attr name="ldl_spacing" format="dimension"/>
        <attr name="ldl_labelTextSize" format="dimension"/>
        <attr name="ldl_valueTextSize" format="dimension"/>
        <attr name="ldl_labelTextColor" format="color"/>
        <attr name="ldl_valueTextColor" format="color"/>
        <attr name="ldl_lineHeight" format="dimension"/>
        <attr name="ldl_lineWidth" format="dimension"/>
        <attr name="ldl_lineMarginLeft" format="dimension"/>
        <attr name="ldl_lineMarginRight" format="dimension"/>
        <attr name="ldl_lineMarginTop" format="dimension"/>
        <attr name="ldl_lineMarginBottom" format="dimension"/>
        <attr name="ldl_lineColor" format="color"/>
        <attr name="ldl_valueTextEnabledEdit" format="boolean"/>
        <attr name="ldl_rightDrawable" format="reference"/>
        <attr name="ldl_rightText" format="string"/>
        <attr name="ldl_rightBackgroundColor" format="color"/>
        <attr name="ldl_rightDrawableWidth" format="dimension"/>
        <attr name="ldl_rightDrawableHeight" format="dimension"/>
    </declare-styleable>
</resources>